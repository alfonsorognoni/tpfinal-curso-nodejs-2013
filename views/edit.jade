extends layout

block content
  form#login(method="post",action="")
    h1= title
    p #{employee.nombre}
    label(for='name') Nombre
    input#name(name='name', placeholder='nombre', value=employee.nombre)
    label(for='lastname') Apellido
    input#lastname(name='lastname', placeholder='apellido', value=employee.apellido)
    label(for='email') E-Mail
    input#email(name='email', placeholder='email', value=employee.email)
    input#send(type='submit', value='Edit')
  a(class='cancelar', href='/panel/employees') Cancelar